{{!< default}}

<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav">
        {{#if @blog.navigation}}
            <a class="hvr-grow menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title"><a class="hvr-forward" href="{{@blog.url}}">{{@blog.title}}</a></h1>
            <h3 class="page-description">&mdash; {{@blog.description}} &mdash;</h3>
        </div>
    </div>
</header>

{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">

    <div class="tag-cloud">
        {{#get "tags" limit="20" include="count.posts" order="count.posts desc"}}
            {{#foreach tags}}
                <a class="hvr-buzz-out" data-count="{{count.posts}}" href="{{@blog.url}}/tag/{{slug}}"{{!--  style="font-size: calc({{count.posts}}% * 15)" --}}>{{name}}</a>
            {{/foreach}}
        {{/get}}
    </div>

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>

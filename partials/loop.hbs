{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
  <article class="{{post_class}}">
    <header class="post-header">
      <h2 class="post-title hvr-forward"><a href="{{url}}">{{title}}</a></h2>
    </header>
    <section class="post-excerpt">
      <p>{{excerpt words="120"}} <a class="read-more hvr-fade" href="{{url}}">continue...</a></p>
    </section>
    <footer class="post-meta">
      <div class="post-meta-main">
        {{#if author.image}}<a href="{{url}}"><img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" /></a>{{/if}}
        {{#author}}
            <a class="hvr-fade author-name" href="{{url}}">{{name}}</a>
        {{/author}}
        &mdash; <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM YYYY"}}</time>
      </div>
      {{#foreach tags}}
        <a href="{{url}}" title="{{name}}" class="tag-link hvr-fade">{{name}}</a> <span>&bull;</span>
      {{/foreach}}
    </footer>
  </article>
{{/foreach}}

{{!-- Previous/next page links - displayed on every page --}}
{{pagination}}
